{
    "name": "ona",
    "displayName": "Ona",
    "version": "2.5.4",
    "description": "Ona is your mission control for serious software projects and parallel coding agents.",
    "author": "Ona <info@ona.com>",
    "homepage": "https://ona.com",
    "scripts": {
        "dev": "plasmo dev --source-maps --no-minify",
        "watch-dev": "pnpm build-dev-tools && .bin/watch-sync serve ./build/chrome-mv3-dev",
        "watch-prod": "pnpm build-dev-tools && .bin/watch-sync serve ./build/chrome-mv3-prod",
        "build": "plasmo build --source-maps --no-minify",
        "test": "cd test && pnpm test",
        "package": "plasmo package",
        "package:all": "pnpm build --target=chrome-mv3 && pnpm build --target=firefox-mv3 && pnpm package --target=chrome-mv3 && pnpm package --target=firefox-mv3",
        "format": "prettier --experimental-ternaries --write .",
        "build-dev-tools": "sh dev/build.sh",
        "puppeteer-install": "puppeteer browsers install"
    },
    "dependencies": {
        "@plasmohq/storage": "^1.10.0",
        "@tailwindcss/forms": "^0.5.10",
        "classnames": "^2.5.1",
        "configcat-js": "^9.6.0",
        "configcat-react": "^4.9.0",
        "lucide-react": "^0.474.0",
        "plasmo": "^0.90.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hotkeys-hook": "^4.6.1",
        "validator": "^13.12.0",
        "webext-dynamic-content-scripts": "^10.0.2",
        "webext-permission-toggle": "^5.0.2",
        "webextension-polyfill": "^0.12.0"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.3.1",
        "@types/chai": "^5.0.1",
        "@types/chrome": "0.0.287",
        "@types/mocha": "^10.0.7",
        "@types/node": "20.14.5",
        "@types/puppeteer": "^7.0.4",
        "@types/react": "18.3.3",
        "@types/react-dom": "18.3.1",
        "@types/validator": "^13.12.0",
        "@types/webextension-polyfill": "^0.12.1",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "autoprefixer": "^10.4.15",
        "chai": "^5.1.2",
        "eslint": "^8.49.0",
        "eslint-plugin-react": "^7.33.2",
        "htmlnano": "2.0.3",
        "mocha": "^11.1.0",
        "postcss": "^8.5.2",
        "prettier": "3.3.3",
        "puppeteer": "^23.6.0",
        "puppeteer-core": "^24.27.0",
        "source-map-support": "^0.5.21",
        "tailwindcss": "^3.4.15",
        "ts-node": "^10.9.2",
        "typescript": "5.5.4"
    },
    "manifest": {
        "optional_host_permissions": [
            "*://*/*"
        ],
        "permissions": [
            "scripting",
            "contextMenus",
            "activeTab"
        ],
        "browser_specific_settings": {
            "gecko": {
                "id": "{dbcc42f9-c979-4f53-8a95-a102fbff3bbe}"
            }
        }
    },
    "pnpm": {
        "supportedArchitectures": {
            "libc": [
                "musl"
            ]
        },
        "overrides": {
            "sharp": "0.33.4"
        }
    }
}
